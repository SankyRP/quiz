<%- include("./partials/header")%>


<div class="container" style="width: 60%;margin-bottom: 50%; text-align: center;">

  <center>
    <div class="card card-signin my-5">
      <div class="card-body">
        <h1 class="card-title text-center" style="font-size: 65px;">Welcome back!</h1>
        <form class="form-signin" action="/login" method="POST">
          <div class="form-label-group">
            <input type="username" id="inputEmail" class="form-control"
              style="width: 50%;font-size: 30px;margin-top: 5px;" name="username" placeholder="username" required
              autofocus>

          </div>

          <div class="form-label-group">
            <input type="password" id="inputPassword" class="form-control"
              style="width: 50%;font-size: 30px;margin-top: 5px;" name="password" placeholder="Password" required>

          </div>


          <button class="btn btn-md btn-primary btn-block text-uppercase" type="submit"
            style="width: 50%;font-size: 30px;margin-top: 5px;">Sign
            in</button>
          <a href="/register" style="font-size: 25px;margin-top: 10px;color: seagreen;">New user?<br />Click to
            Sign
            Up!</a>
        </form>
      </div>
    </div>
  </center>
